@using Microsoft.AspNetCore.Http;
@model WebApplication3.Models.RegionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>



<span>@ViewBag.Error</span>
<br />
<h4>Pais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="Create">
        
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Pais.Nombre" class="control-label"></label>
                    <input asp-for="Pais.Nombre" class="form-control" />
                    <span asp-validation-for="Pais.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pais.CodigoIso" class="control-label"></label>
                    <input asp-for="Pais.CodigoIso" class="form-control" />
                    <span asp-validation-for="Pais.CodigoIso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pais.Pbi" class="control-label"></label>
                    <input asp-for="Pais.Pbi" class="form-control" />
                    <span asp-validation-for="Pais.Pbi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pais.Poblacion" class="control-label"></label>
                    <input asp-for="Pais.Poblacion" class="form-control" />
                    <span asp-validation-for="Pais.Poblacion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pais.Imagen" class="control-label"></label>
                    <input asp-for="Pais.Imagen" class="form-control" />
                    <span asp-validation-for="Pais.Imagen" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select id="Regiones" name="IdRegionSeleccionada">
                        @foreach (var p in Model.Regiones)
                        {
                            <option value="@p.IdRegion">@p.Nombre</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
