@using Microsoft.AspNetCore.Http;
@model WebApplication3.Models.RegionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<br />
<h4>Pais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="formCrear" method="post" asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pais.Nombre" class="control-label"></label>
                <input asp-for="Pais.Nombre" id="txtNombre" class="form-control" />
                <span asp-validation-for="Pais.Nombre" id="avisoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pais.CodigoIso" class="control-label"></label>
                <input asp-for="Pais.CodigoIso" id="codigoISo" class="form-control" />
                <span asp-validation-for="Pais.CodigoIso" id="avisoCod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pais.Pbi" class="control-label"></label>
                <input asp-for="Pais.Pbi" id="pbi" class="form-control" />
                <span asp-validation-for="Pais.Pbi" id="avisoPbi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pais.Poblacion" class="control-label"></label>
                <input asp-for="Pais.Poblacion" id="poblacion" class="form-control" />
                <span asp-validation-for="Pais.Poblacion" id="avisoPob" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input asp-for="Imagen" id="imagen" class="form-control" />
                <span asp-validation-for="Imagen" id="avisoImg" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select id="Regiones" name="IdRegionSeleccionada">

                    @foreach (var p in Model.Regiones)
                    {
                        <option value="@p.IdRegion">@p.Nombre</option>
                    }
                </select>
                <span id="Regiones" class="text-danger"></span>

            </div>

            <p style="color: darkred; padding:5px">@ViewBag.Error</p>
            <div class="form-group">
                <input type="submit" onclick="evento" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.querySelector("#formCrear").addEventListener('submit', validarDatos);

        function validarDatos(evento) {

            evento.preventDefault();

            let txtNombre = document.querySelector("#txtNombre").value;
            let codigoISo = document.querySelector("#codigoISo").value;
            let pbi = document.querySelector("#pbi").value;
            let poblac = document.querySelector("#poblacion").value;
            let img = document.querySelector("#imagen").value;



            let txtNombreV = false;
            let codigoISoV = false;
            let pbiV = false;
            let poblacV = false;
            let imgV = false;

            if (txtNombre != "" && pbi > 0) { txtNombreV = true; } else { document.querySelector("#avisoNombre").innerHTML = "Campo no puede estar vacìo" }
            if (codigoISo != "") { codigoISoV = true; } else { document.querySelector("#avisoCod").innerHTML = "Campo no puede estar vacìo" }
            if (pbi != "" && pbi > 0) { pbiV = true; } else { document.querySelector("#avisoPbi").innerHTML = "Campo no puede estar vacìo" }
            if (poblac != "" && poblac > 0) { poblacV = true; } else { document.querySelector("#avisoPob").innerHTML = "Campo no puede estar vacìo" }
            if (img != "") { imgV = true; } else { document.querySelector("#avisoImg").innerHTML = "Campo no puede estar vacìo" }

     
            if (txtNombreV && codigoISoV && pbiV && poblacV && imgV) {

                this.submit();
            }


        }



    </script>
}

